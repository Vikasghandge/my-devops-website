  <script>
    async function loadPosts() {
      try {
        const res = await fetch("http://65.2.123.59:5000/api/posts");
        const posts = await res.json();
        const container = document.getElementById("posts");

        if (posts.length === 0) {
          container.innerHTML = "<p>No articles yet. Stay tuned!</p>";
          return;
        }

        container.innerHTML = posts.map(p => {
          const excerpt = p.content.length > 250 ? p.content.substring(0, 250) + "..." : p.content;
          return `
            <article>
              <h3>${p.title}</h3>
              ${p.image ? `<img src="http://65.2.123.59:5000${p.image}" class="post-image" alt="Post image">` : ""}
              <div class="post-content">${excerpt}</div>
              <a href="post.html?id=${p.id}" class="read-more">Read More</a>
              <small>üïí ${new Date(p.created_at).toLocaleString()}</small>
            </article>
          `;
        }).join("");

      } catch (error) {
        document.getElementById("posts").innerHTML = "<p>‚ö†Ô∏è Failed to load posts.</p>";
        console.error("Error loading posts:", error);
      }
    }

    loadPosts();
  </script>
